{
    "workbench.startupEditor": "none",
    "window.titleBarStyle": "custom",
    "editor.fontFamily": "'Cascadia Code PL', 'Hasklug Nerd Font'",
    "editor.fontSize": 15,
    "editor.fontLigatures": "'calt', 'ss01'",
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "comment",
                "settings": {
                    "fontStyle": "italic bold"
                }
            },
            {
                "scope": "storage.type",
                "settings": {
                    "fontStyle": "italic"
                }
            },
            {
                "scope": "variable.parameter",
                "settings": {
                    "fontStyle": ""
                }
            }
        ]
    },
    "editor.formatOnSave": true,
    "editor.minimap.enabled": false,
    "workbench.colorTheme": "Dracula",
    "workbench.iconTheme": "material-icon-theme",
    "cmake.statusbar.advanced": {
        "ctest": {
            "visibility": "hidden"
        },
        "build": {
            "visibility": "hidden"
        },
        "buildTarget": {
            "visibility": "hidden"
        },
        "kit": {
            "visibility": "hidden"
        },
        "configurePreset": {
            "visibility": "icon"
        },
        "status": {
            "visibility": "compact"
        }
    }
}